{
    "manifest_version": 2,
    "name" : "Crucible Canned Responses",
    "description" : "Choose from a set of canned responses when commenting on crucible code reviews",
    "version" : "0.0.1",
    "icons": {
        "128": "logo.png"
    },
    "permissions": [
        "activeTab"
    ],
    "options_page": "options.html",
    "content_scripts": [
        {
            "js": [
                "editor.js",
                "contentScript.js"
            ],
            "css": [
                "options.css"
            ],
            "matches": [
                "*://*/*"
            ],
            "include_globs": [
                "*crucible*"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    }
}
